<Window x:Class="MintPaint.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Установка Mint Paint" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0078D7">
            <StackPanel VerticalAlignment="Center" Margin="30,0">
                <TextBlock x:Name="TitleText" Text="Mint Paint" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="SubtitleText" Text="Графический редактор" FontSize="14" Foreground="#E0E0E0"/>
            </StackPanel>
        </Border>

        <!-- Контент -->
        <StackPanel Grid.Row="1" Margin="30,20">
            <TextBlock x:Name="WelcomeText" Text="Добро пожаловать в установку Mint Paint!" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock x:Name="PathLabel" Text="Папка установки:" FontSize="12" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InstallPathTextBox" Grid.Column="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>
                <Button x:Name="BrowseButton" Grid.Column="1" Content="Обзор..." Width="80" Height="30" Margin="5,0,0,0" Click="BrowseButton_Click"/>
            </Grid>

            <CheckBox x:Name="DesktopShortcutCheckBox" Content="Создать ярлык на рабочем столе" IsChecked="True" Margin="0,0,0,10"/>
            <CheckBox x:Name="StartMenuShortcutCheckBox" Content="Создать ярлык в меню Пуск" IsChecked="True" Margin="0,0,0,20"/>

            <TextBlock x:Name="StatusText" Text="" FontSize="12" Foreground="#666666" TextWrapping="Wrap"/>
            <ProgressBar x:Name="InstallProgress" Height="20" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30,0">
            <Button x:Name="InstallButton" Content="Установить" Width="100" Height="35" Margin="0,0,10,0" 
                    Click="InstallButton_Click" Background="#0078D7" Foreground="White" BorderThickness="0" FontSize="14"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="35" 
                    Click="CancelButton_Click" Background="#E1E1E1" Foreground="#333333" BorderBrush="#ADADAD" BorderThickness="1" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
