<Window x:Class="mint.paint.LayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Слои"
        Width="250" Height="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Topmost="True"
        Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="AddLayerButton" Content="+" ToolTip="Добавить слой" 
                   Click="AddLayerButton_Click" Width="25" Height="25" Margin="2"/>
            <Button x:Name="RemoveLayerButton" Content="-" ToolTip="Удалить слой" 
                   Click="RemoveLayerButton_Click" Width="25" Height="25" Margin="2"/>
            <Button x:Name="MergeLayersButton" Content="⟳" ToolTip="Объединить видимые" 
                   Click="MergeLayersButton_Click" Width="25" Height="25" Margin="2"/>
            <Button x:Name="LayerMenuButton" Content="☰" ToolTip="Параметры" 
                   Width="25" Height="25" Margin="2" Click="LayerMenuButton_Click">
                <Button.ContextMenu>
                    <ContextMenu x:Name="LayerMenu">
                        <MenuItem x:Name="ShowInactiveLayersMenu" Header="Показывать невидимые слои на холсте" IsCheckable="True" IsChecked="False" Click="ShowInactiveLayers_Click"/>
                        <MenuItem x:Name="InactiveOpacityMenu" Header="Прозрачность невидимых слоев">
                            <Slider x:Name="InactiveOpacitySlider" Minimum="0" Maximum="100" Value="30" Width="150" ValueChanged="InactiveOpacitySlider_ValueChanged"/>
                        </MenuItem>
                        <MenuItem x:Name="AutoLayerTextMenu" Header="Добавлять новый слой при добавлении текста" IsCheckable="True" Click="AutoLayerOnText_Click"/>
                        <MenuItem x:Name="MergeSameColorsMenu" Header="Объеденить слои с одинаковыми цветами..." Click="MergeSameColors_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>

        <!-- Список слоев -->
        <ListBox x:Name="LayersListBox" Grid.Row="1" Margin="5"
                SelectionChanged="LayersListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="Transparent" Padding="5" MouseDown="LayerItem_MouseDown">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Видимость -->
                            <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible}" 
                                     Checked="VisibilityCheckBox_Changed" Unchecked="VisibilityCheckBox_Changed"
                                     Margin="0,0,5,0" VerticalAlignment="Center"/>

                            <!-- Название слоя -->
                            <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"
                                      MouseDown="LayerName_MouseDown"/>

                            <!-- Непрозрачность -->
                            <TextBlock Grid.Column="2" Text="{Binding Opacity, StringFormat={}{0}%}" 
                                      VerticalAlignment="Center" FontSize="10" Foreground="Gray"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="5">
            <TextBlock x:Name="OpacityLabel" Text="Непрозрачность:" FontWeight="Bold" Margin="0,5"/>
            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Value="100"
                   ValueChanged="OpacitySlider_ValueChanged"/>

            <Button x:Name="MoveUpButton" Content="↑ Вверх" Click="MoveUpButton_Click" 
                   Margin="0,5" Height="25"/>
            <Button x:Name="MoveDownButton" Content="↓ Вниз" Click="MoveDownButton_Click" 
                   Margin="0,2" Height="25"/>
            <Button x:Name="LayerEffectsButton" Content="⚡ Эффекты слоя" Click="LayerEffectsButton_Click" 
                   Margin="0,5" Height="25"/>
        </StackPanel>
    </Grid>
</Window>