<Window x:Class="mint.paint.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="AppNameText" Grid.Row="0" Text="mint.paint" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock x:Name="VersionText" Grid.Row="1" Text="Версия 1.0.0" 
                   FontSize="14" Foreground="#666666" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock x:Name="DescriptionText" Grid.Row="2" 
                   Text="Графический редактор для рисования и редактирования изображений" 
                   FontSize="12" Foreground="#666666" 
                   TextWrapping="Wrap" HorizontalAlignment="Center" 
                   TextAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock x:Name="CopyrightText" Grid.Row="3" Text="© misdon технологии
2025" 
                   FontSize="11" Foreground="#999999" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CheckUpdateButton" Content="Проверить обновления" 
                    Width="150" Height="30" Margin="0,0,10,0"
                    Click="CheckUpdateButton_Click"
                    Background="#E1E1E1" Foreground="#333333" 
                    BorderBrush="#ADADAD" BorderThickness="1" FontSize="12"/>
            <Button x:Name="OkButton" Content="OK" 
                    Width="80" Height="30" 
                    Click="OkButton_Click"
                    Background="#E1E1E1" Foreground="#333333" 
                    BorderBrush="#ADADAD" BorderThickness="1" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
