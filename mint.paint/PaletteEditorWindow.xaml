<Window x:Class="mint.paint.PaletteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор палитры" Width="400" Height="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{DynamicResource WindowBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="PaletteNameLabel" Text="Название палитры:" Margin="0,0,0,5"/>
            <TextBox x:Name="PaletteNameBox" Text="Моя палитра"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="AddColorButton" Content="Добавить цвет" Click="AddColor_Click" Padding="10,5" Margin="0,0,5,0"/>
                <Button x:Name="RemoveColorButton" Content="Удалить" Click="RemoveColor_Click" Padding="10,5"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ColorsPanel"/>
            </ScrollViewer>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Click="Save_Click" Padding="15,5" Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="Cancel_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>

