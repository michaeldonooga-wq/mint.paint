<Window x:Class="mint.paint.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Палитра цветов"
        Width="359" 
        Height="420"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Topmost="True"
        Focusable="True"
        Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка переключения режима -->
        <Button x:Name="ToggleModeButton" Content="▼ Больше настроек" 
                Click="ToggleModeButton_Click" Margin="160,10,0,10" Height="25" 
                HorizontalAlignment="Left" Width="120" Grid.Column="1" Grid.ColumnSpan="2"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Цветовой круг -->
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" 
                    Background="White" Margin="0,0,0,10">
                <Grid x:Name="ColorWheelGrid" Width="250" Height="250" 
                      HorizontalAlignment="Center">

                    <!-- Цветовой круг (будет рисоваться в коде) -->
                    <Image x:Name="ColorWheelImage" Stretch="Uniform"
                           MouseDown="ColorWheel_MouseDown"
                           MouseMove="ColorWheel_MouseMove"
                           MouseUp="ColorWheel_MouseUp"
                           LostMouseCapture="ColorWheel_LostMouseCapture"/>

                    <!-- Курсор выбора цвета -->
                    <Ellipse x:Name="ColorCursor" Width="12" Height="12" 
                            Stroke="Black" StrokeThickness="2" 
                            Fill="Transparent" 
                            IsHitTestVisible="False"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="125,125,0,0"/>
                </Grid>
            </Border>

            <!-- Расширенные настройки (скрыты по умолчанию) -->
            <ScrollViewer x:Name="AdvancedSettingsScroll" Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" MaxHeight="200"
                         Visibility="Collapsed">
                <StackPanel>
                    <!-- HSL регуляторы -->
                    <GroupBox x:Name="HSLGroup" Header="HSL настройки" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock x:Name="HueText" Text="Оттенок (Hue): 0°"/>
                            <Slider x:Name="HueSlider" Minimum="0" Maximum="360" Value="0" 
                                   ValueChanged="HueSlider_ValueChanged" Margin="0,5,0,10"/>

                            <TextBlock x:Name="SaturationText" Text="Насыщенность (Saturation): 100%"/>
                            <Slider x:Name="SaturationSlider" Minimum="0" Maximum="100" Value="100" 
                                   ValueChanged="SaturationSlider_ValueChanged" Margin="0,5,0,10"/>

                            <TextBlock x:Name="LightnessText" Text="Яркость (Lightness): 50%"/>
                            <Slider x:Name="LightnessSlider" Minimum="0" Maximum="100" Value="50" 
                                   ValueChanged="LightnessSlider_ValueChanged" Margin="0,5,0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- RGB регуляторы -->
                    <GroupBox x:Name="RGBGroup" Header="RGB настройки">
                        <StackPanel Margin="5">
                            <TextBlock x:Name="RedText" Text="Красный (R): 0"/>
                            <Slider x:Name="RedSlider" Minimum="0" Maximum="255" Value="0" 
                                   ValueChanged="RGBSlider_ValueChanged" Margin="0,5,0,10"/>

                            <TextBlock x:Name="GreenText" Text="Зеленый (G): 0"/>
                            <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" Value="0" 
                                   ValueChanged="RGBSlider_ValueChanged" Margin="0,5,0,10"/>

                            <TextBlock x:Name="BlueText" Text="Синий (B): 255"/>
                            <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" Value="255" 
                                   ValueChanged="RGBSlider_ValueChanged" Margin="0,5,0,10"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Нижняя панель с превью и HEX-кодом -->
            <Grid Grid.Row="2">
                <StackPanel>
                    <!-- Превью цвета -->
                    <Border x:Name="ColorPreview" Height="40" Background="Blue" 
                           CornerRadius="5" BorderBrush="LightGray" BorderThickness="1"
                           Margin="0,10,0,5">
                        <TextBlock x:Name="ColorInfoText" Text="#0000FF" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  FontFamily="Consolas" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <!-- Поле для HEX-кода -->
                    <TextBox x:Name="HexColorTextBox" Text="#0000FF" Margin="0,0,0,5" 
                            TextChanged="HexColorTextBox_TextChanged"
                            PreviewTextInput="HexColorTextBox_PreviewTextInput"
                            FontFamily="Consolas"/>

                    <!-- Подсказка -->
                    <TextBlock x:Name="ColorAppliedLabel" Text="Цвет применяется автоматически" 
                              HorizontalAlignment="Center" 
                              FontStyle="Italic" Foreground="Gray" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Label x:Name="PaletteLabel" Content="Палитра" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="2"/>
    </Grid>
</Window>