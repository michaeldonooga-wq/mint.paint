<UserControl x:Class="mint.paint.TextOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border x:Name="TextBorder" BorderBrush="DodgerBlue" BorderThickness="2" 
                Background="#20FFFFFF" Padding="5" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="White" Margin="-5,-5,-5,0">
                    <ComboBox x:Name="FontCombo" Width="120" Margin="2" SelectionChanged="Font_Changed"/>
                    <ComboBox x:Name="SizeCombo" Width="60" Margin="2" IsEditable="True" SelectionChanged="Size_Changed"/>
                    <ToggleButton x:Name="BoldBtn" Content="B" Width="30" Margin="2" FontWeight="Bold" Click="Bold_Click"/>
                    <ToggleButton x:Name="ItalicBtn" Content="I" Width="30" Margin="2" FontStyle="Italic" Click="Italic_Click"/>
                    <ToggleButton x:Name="UnderlineBtn" Width="30" Margin="2" Click="Underline_Click">
                        <TextBlock Text="U" TextDecorations="Underline"/>
                    </ToggleButton>
                    <ToggleButton x:Name="StrikethroughBtn" Width="30" Margin="2" Click="Strikethrough_Click">
                        <TextBlock Text="S" TextDecorations="Strikethrough"/>
                    </ToggleButton>
                    <TextBlock x:Name="StyleIndicator" Margin="5,0" VerticalAlignment="Center" Foreground="Gray" FontSize="10"/>
                    <Border x:Name="ColorBox" Width="30" Height="20" BorderBrush="Gray" BorderThickness="1" 
                            Margin="2" Cursor="Hand" MouseDown="Color_Click"/>
                    <Button x:Name="MoveBtn" Content="✥" Width="30" Margin="2" ToolTip="Переместить текст" Click="Move_Click"/>
                </StackPanel>
                
                <!-- TextBox -->
                <TextBox x:Name="TextInput" Grid.Row="1" 
                         TextWrapping="Wrap" AcceptsReturn="False"
                         BorderThickness="0" Background="Transparent"
                         VerticalScrollBarVisibility="Auto"
                         Padding="2" PreviewKeyDown="TextInput_KeyDown"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
