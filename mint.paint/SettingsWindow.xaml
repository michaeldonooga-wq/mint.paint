<Window x:Class="mint.paint.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Width="400" Height="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{DynamicResource WindowBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="AppSettingsLabel" Text="Настройки приложения" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1">
            <TabItem x:Name="PaletteTab" Header="Палитра">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock x:Name="CustomPalettesLabel" Text="Пользовательские палитры:" Margin="0,0,0,5"/>
                    <ListBox x:Name="CustomPalettesList" Height="100" Margin="0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button x:Name="AddButton" Content="Добавить" Click="AddPalette_Click" Padding="10,5" Margin="0,0,5,0"/>
                        <Button x:Name="RemoveButton" Content="Удалить" Click="RemovePalette_Click" Padding="10,5"/>
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="SpecialTab" Header="Особое">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock x:Name="LanguageLabel" Text="Язык:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="LanguageComboBox" Margin="0,5,0,15">
                        <ComboBoxItem Content="Русский" Tag="ru" IsSelected="True"/>
                        <ComboBoxItem Content="English" Tag="en"/>
                    </ComboBox>
                    
                    <TextBlock x:Name="UndoStepsLabel" Text="Шагов отмены:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                        <Slider x:Name="UndoStepsSlider" Width="200" Minimum="5" Maximum="50" Value="20" TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                        <TextBlock x:Name="UndoStepsText" Text="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <CheckBox x:Name="AutoUpdateCheckBox" Content="Включить автообновления" Margin="0,10"/>
                </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ApplyButton" Content="Применить" Click="Apply_Click" Padding="15,5" Margin="0,0,5,0"/>
            <Button x:Name="CloseButton" Content="Закрыть" Click="Close_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>

